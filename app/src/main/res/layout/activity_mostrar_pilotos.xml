<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sqlite.MostrarPilotosActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPiloto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <Button
        android:id="@+id/btnDeleteByDorsal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Eliminar por dorsal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dorsalAEliminar"
        tools:layout_editor_absoluteX="188dp" />

    <EditText
        android:id="@+id/dorsalAEliminar"
        android:layout_width="193dp"
        android:layout_height="43dp"
        android:hint="Dorsal a eliminar"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteByDorsal"
        app:layout_constraintTop_toTopOf="@+id/guideline8"

        tools:layout_editor_absoluteX="194dp" />

</androidx.constraintlayout.widget.ConstraintLayout>